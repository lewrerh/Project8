extends layout

block content
  head
    title Books
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
      // tr
          td
            a(href='book_detail.html') A Brief History of Time
          td Stephen Hawking
          td Non Fiction
          td 1988
        tr
          td
            a(href='book_detail.html') Armada
          td Ernest Cline
          td Science Fiction
          td 2015
      each book in books 
        tr  
          td
            a(href=`/books/${book.id}`)= book.title
          td=book.author
          td=book.genre
          td=book.year

          